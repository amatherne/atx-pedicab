<!-- snippet/page-builder -->

{% assign s = section.settings %}
{% comment %}{% assign masterClass = 'page-builder-container' %}{% endcomment %}
{% capture masterClass %}section{{section.id}}{{template.handle}}{% endcapture %}

<div class="page-builder-container {{masterClass}}">
    {% for block in section.blocks %}
        {% assign b = block.settings %}
        {% if block.type == 'group' %}
            {% assign loop = forloop.index %}
            {% assign loop = b.title | handleize %}
            {% capture contClass %}container{{block.id}}{% endcapture %}


            <div class=" {{contClass}}">
	            {% if b.page_width == true %}
	            <div class="page-width">
	            {% elsif b.page_width_max != blank %}
	            <div class="page-width" style="max-width: {{ b.page_width_max }}px">
	            {% else %}
	            <div>
	            {% endif %}
	                {% if b.custom_html != blank %}
	                    <style type="text/css">
	                        {% assign custom = b.custom_html | raw %}
	                        {% assign contClassCSS = contClass | prepend: '.' %}
	                        {% assign cssLoop = custom | replace: '==', contClassCSS | replace: ';', ' !important;' %}

	                        {{cssLoop}}
	                    </style>
	                {% endif %}

	                <div class="grid">
	                    {% for block in section.blocks %}
	                    {% assign b = block.settings %}
	                    {% assign b_id = block.id | replace: '-','' %}
	                    {% assign groupNum = b.group_num | plus: 0 %}
	                    {% assign groupNum = b.group_num | handleize %}
	                    {% if groupNum == loop %}
	                        {% capture blockClass %}block{{block.id}}{% endcapture %}
	                        {% capture cssClass %}.{{masterClass}} .block{{block.id}}{% endcapture %}
	                        {% assign block_width = 'one-whole' %}
	                        
	                        {% case b.width_small %}{% when '8%' %}{%- assign small_width = 'small--one-twelfth' -%}{% when '10%' %}{%- assign small_width = 'small--one-tenth' -%}{% when '16%' %}{%- assign small_width = 'small--two-twelfths' -%}{% when '20%' %}{%- assign small_width = 'small--two-tenths' -%}{% when '25%' %}{%- assign small_width = 'small--three-twelfths' -%}{% when '30%' %}{%- assign small_width = 'small--three-tenths' -%}{% when '33%' %}{%- assign small_width = 'small--four-twelfths' -%}{% when '40%' %}{%- assign small_width = 'small--four-tenths' -%}{% when '41%' %}{%- assign small_width = 'small--five-twelfths' -%}{% when '50%' %}{%- assign small_width = 'small--one-half' -%}{% when '58%' %}{%- assign small_width = 'small--seven-twelfths' -%}{% when '60%' %}{%- assign small_width = 'small--six-tenths' -%}{% when '66%' %}{%- assign small_width = 'small--eight-twelfths' -%}{% when '70%' %}{%- assign small_width = 'small--seven-tenths' -%}{% when '75%' %}{%- assign small_width = 'small--nine-twelfths' -%}{% when '80%' %}{%- assign small_width = 'small--eight-tenths' -%}{% when '83%' %}{%- assign small_width = 'small--ten-twelfths' -%}{% when '90%' %}{%- assign small_width = 'small--nine-tenths' -%}{% when '91%' %}{%- assign small_width = 'small--eleven-twelfths' -%}{% else %}{%- assign small_width = 'small--one-whole' -%}{% endcase %}
