	                                                {{cssClass}} .header-block h2 {
	                                                    font-size: {{b.title_size}}px;
	                                                }
	                                                {{cssClass}} .header-block h3 {
	                                                    font-size: {{b.top_title_size}}px;
	                                                }
	                                            }
	                                        </style>
	                                    </div>

	                                {% when 'content' %}
