	                        {% case b.width_large %}{% when '8%' %}{%- assign large_width = 'large-up--one-twelfth' -%}{% when '10%' %}{%- assign large_width = 'large-up--one-tenth' -%}{% when '16%' %}{%- assign large_width = 'large-up--two-twelfths' -%}{% when '20%' %}{%- assign large_width = 'large-up--two-tenths' -%}{% when '25%' %}{%- assign large_width = 'large-up--three-twelfths' -%}{% when '30%' %}{%- assign large_width = 'large-up--three-tenths' -%}{% when '33%' %}{%- assign large_width = 'large-up--four-twelfths' -%}{% when '40%' %}{%- assign large_width = 'large-up--four-tenths' -%}{% when '41%' %}{%- assign large_width = 'large-up--five-twelfths' -%}{% when '50%' %}{%- assign large_width = 'large-up--one-half' -%}{% when '58%' %}{%- assign large_width = 'large-up--seven-twelfths' -%}{% when '60%' %}{%- assign large_width = 'large-up--six-tenths' -%}{% when '66%' %}{%- assign large_width = 'large-up--eight-twelfths' -%}{% when '70%' %}{%- assign large_width = 'large-up--seven-tenths' -%}{% when '75%' %}{%- assign large_width = 'large-up--nine-twelfths' -%}{% when '80%' %}{%- assign large_width = 'large-up--eight-tenths' -%}{% when '83%' %}{%- assign large_width = 'large-up--ten-twelfths' -%}{% when '90%' %}{%- assign large_width = 'large-up--nine-tenths' -%}{% when '91%' %}{%- assign large_width = 'large-up--eleven-twelfths' -%}{% else %}{%- assign large_width = 'large-up--one-whole' -%}{% endcase %}
