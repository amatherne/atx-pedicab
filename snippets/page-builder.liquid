	                            {% assign hide_mobile = 'small--hide' %}
	                        {% endif %}
	                        {% if b.hide_desk == true %}
	                            {% assign hide_desktop = 'medium-up--hide' %}
	                        {% endif %}
	                        <div class="grid__item {{grid_widths}} {{blockClass}} sm-start{{b_id}} {{hide_mobile}} {{hide_desktop}}">
