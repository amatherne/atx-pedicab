	                                        {% assign ttl = product.title %}
	                                        {% assign desc = product.description %}
	                                        {% assign price = product.price %}
	                                        {% assign is_refill = b.is_refill %}

	                                        {% assign refillProd = false %}
	                                        {% if ttl contains 'Refill' or is_refill == true %}
	                                            {% assign refillProd = true %}
	                                        {% endif %}


	                                        {% if b.main_image != blank %}
	                                            {% assign mainImg = b.main_image %}
	                                        {% endif %}
