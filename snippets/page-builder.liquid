	                                        {% comment %}{% assign mainImgBot = b.main_image_behind_bottom %}{% endcomment %}
	                                        {% if b.title != blank %}
	                                            {% assign ttl = b.title %}
	                                        {% endif %}
	                                        {% if b.desc != blank %}
	                                            {% assign desc = b.desc %}
