<script type="text/javascript">
    $(document).ready(function(){
        var section = '.{{masterClass}}',
            open = '.open-modal',
            close = '.close-modal',
            content = '.modal',
            cont_active = 'active';
        $(section+' '+open).click(function(){
            var tab = $(this),
                tab_id = tab.attr('data-open'),
                cont = $("#"+tab_id),
                video = cont.find('.iframe-video');
            if (typeof video.attr('src') === 'undefined' || video.attr('src') === ''){
                video.attr('src',video.data('src'));
            }
            cont.addClass(cont_active);
        })
        $(close).click(function(){
            var tab = $(this),
                tab_id = tab.attr('data-close'),
                cont = $("#"+tab_id),
                video = cont.find('.iframe-video');

            video.data('src',video.attr('src'));
            video.attr('src','');
            cont.removeClass(cont_active);
            // Resets the videos so they aren't playing the background
            $(".iframe-video, .html-video").each(function() {
                var src = $(this).attr('src');
                $(this).attr('src', src);
            });
        })
    })
</script>