	                                            <a class="btn btn--hexagon invert animate" href="{{b.btn_url}}">{{b.btn_txt}}</a>
	                                        {% endif %}
	                                        <style type="text/css">
	                                            @media screen and (min-width:768px) {
	                                                {{cssClass}} .text-block h2 {
	                                                    font-size: {{b.text_size}}px !important;
	                                                }
	                                            }

	                                            {% assign custom = b.custom_html | raw %}
	                                            {% assign cssLoop = custom | replace: '==', cssClass | replace: ';', ' !important;' %}

	                                            {{cssLoop}}


	                                        </style>
	                                    </div>

	                                {% when 'list' %}
	                                    <div id="{{b_id}}" class="inner-container {{block.type}}-block ">
	                                        {% for i in (1..4) %}
	                                            {% assign num = i | plus: 0 %}
	                                            {% capture ttl %}{% capture item %}title_{{num}}{% endcapture %}{{b[item]}}{% endcapture %}
	                                            {% capture txt %}{% capture item %}text_{{num}}{% endcapture %}{{b[item]}}{% endcapture %}
	                                            {% if ttl != blank and txt != blank %}
	                                                <div class="list-item">
	                                                    <span class="title">{{ttl}}</span>
	                                                    <span class="content">{{txt}}</span>
	                                                </div>
	                                            {% endif %}
	                                        {% endfor %}

	                                        <style type="text/css">

	                                            {% assign custom = b.custom_html | raw %}
	                                            {% assign cssLoop = custom | replace: '==', cssClass | replace: ';', ' !important;' %}

	                                            {{cssLoop}}


	                                        </style>
	                                    </div>

	                                {% when 'image' %}
	                                    <div id="{{b_id}}" class="inner-container {{block.type}}-block">
	                                        {% assign bg_image = b.top_image %}
	                                        {% unless b.use_inline == true %}
	                                            <div class="bg_image main-image lazyload animate js"
	                                                 title="{{bg_image.alt}}"
	                                                 style="background-image: url('{{ bg_image | img_url: 'master' }});">
	                                            </div>
	                                        {% else %}
	                                            <img src="{{bg_image|img_url:'master'}}" alt="{{bg_image.alt}}">
	                                        {% endunless %}

	                                        <style type="text/css">
	                                            {% unless b.use_inline == true %}
	                                            {{cssClass}} .inner-container .bg_image {
	                                                padding-top: {{b.height}}px !important;
	                                            }
	                                            {% endunless %}

	                                            {% assign custom = b.custom_html | raw %}
	                                            {% assign cssLoop = custom | replace: '==', cssClass | replace: ';', ' !important;' %}

	                                            {{cssLoop}}
	                                        </style>
	                                    </div>

	                                {% when 'video' %}
	                                    {% assign video = '' %}
	                                    {% assign v = b.video_url %}
	                                    {% assign v_type = v.type%}
	                                    {% assign v_hosted = false %}
	                                    {% if b.video_hosted != blank %}
	                                        {% assign v = b.video_hosted %}
	                                        {% assign v_hosted = true %}
	                                        {% assign v_type = 'video' %}
	                                    {% endif %}
	                                    {% capture video %}
	                                        {% if v_hosted == true %}
	                                            <video class="html-video full-width" width="800" height="480" id="video{{block.id}}" {% if autoplay == true %}autoplay muted loop{% endif %} src="{{b.video_hosted}}"></video>
	                                        {% else  %}
	                                            {% if v.type == "youtube" %}
	                                                <iframe
	                                                    class="iframe-video full-width"
	                                                    src="https://www.youtube.com/embed/{{ v.id }}?{% if autoplay == true %}&autoplay=1&mute=1&controls=0&modestbranding=1&loop=1&{% endif %}vq=hd720"
	                                                    width="800"
	                                                    height="480"
	                                                    allow="autoplay"
	                                                    frameborder="0"
	                                                    allowfullscreen></iframe>
	                                            {% elsif v.type == "vimeo" %}
	                                                <iframe
	                                                    class="iframe-video full-width"
	                                                    id="vid{{block.id}}"
	                                                    src="//player.vimeo.com/video/{{ v.id }}{% if autoplay == true %}?background=1&autoplay=1&loop=1&byline=0&title=0&muted=1{% endif %}"
	                                                    width="800"
	                                                    height="480"
	                                                    frameborder="0"
	                                                    webkitallowfullscreen
	                                                    mozallowfullscreen
	                                                    allowfullscreen></iframe>
	                                            {% endif %}
	                                        {% endif %}
	                                    {% endcapture %}
	                                    <div class="video-ratio">
	                                        {{video}}
	                                    </div>
	                                    <style type="text/css">

	                                        {% assign custom = b.custom_html | raw %}
	                                        {% assign cssLoop = custom | replace: '==', cssClass | replace: ';', ' !important;' %}

	                                        {{cssLoop}}
	                                    </style>

	                                {% when 'hero' %}
	                                    <div class=" {{block.type}}-block" id="{{b_id}}">
	                                        {% assign v = b.video %}
	                                        {% assign v_hosted = false %}
	                                        {% if b.video_hosted != blank %}
	                                            {% assign v = b.video_hosted %}
	                                            {% assign v_hosted = true %}
	                                        {% endif %}
	                                        {% capture video %}
	                                            {% if v.type == "youtube" %}
	                                                <iframe
	                                                    class="iframe-video"
	                                                    data-src="https://www.youtube.com/embed/{{ v.id }}?showinfo=0&controls=0&rel=1&version=3"
	                                                    width="800"
	                                                    height="480"
	                                                    frameborder="0"
	                                                            allow="autoplay"
	                                                    allowfullscreen></iframe>
	                                            {% endif %}
	                                            {% if v.type == "vimeo" %}
	                                                <iframe
	                                                    class="iframe-video"
	                                                    data-src="//player.vimeo.com/video/{{ v.id }}?autoplay=1&title=0&byline=0"
	                                                    width="800"
	                                                    height="480"
	                                                    frameborder="0"
	                                                            allow="autoplay"
	                                                    allowfullscreen></iframe>
	                                            {% endif %}
	                                            {% if v_hosted == true %}
	                                                <video class="html-video" width="800" height="480" id="video{{block.id}}" controls src="{{b.video_hosted}}"></video>
	                                            {% endif %}
	                                        {% endcapture %}
	                                        {% if b.use_bg == true %}
	                                            <div class="bg_image animate" title="{{ b.image.alt | default: b.title }}">
	                                                <div class=" max-width">
	                                                    {% if b.title != blank or b.subtitle != blank %}
	                                                        <div class="center-content {{b.hor_align}}-align">
	                                                            {% if b.title-image != blank %}
	                                                                <img class="title-image" src="{{b.title-image|img_url:'master'}}" alt="{{b.title-image.alt|default:b.title}}">
	                                                            {% endif %}
	                                                            {% if b.title != blank and b.title-image == blank %}
	                                                                <h2 class="animate">{{b.title}}</h2>
	                                                            {% endif %}
	                                                            {% if b.subtitle != blank %}
	                                                                <h4 class="animate">{{b.subtitle}}</h4>
	                                                            {% endif %}

	                                                            {% if v != blank %}
	                                                                <span data-open="video_{{ forloop.index }}" class="btn secondary open-modal">
	                                                                    <span>Watch Video</span>
	                                                                    {% include 'play-btn' %}
	                                                                </span>
	                                                            {% endif %}

	                                                            {% if b.btn_url != blank and b.btn_txt != blank %}
	                                                                <a class="btn" href="{{b.btn_url}}">{{b.btn_txt}}</a>
	                                                            {% endif %}
	                                                        </div>
	                                                    {% endif %}
	                                                </div>
	                                            </div>
	                                            {% if v != blank %}
	                                                <div class="modal" id="video_{{ forloop.index }}">
	                                                    <div class="overlay-close close-modal" data-close="video_{{ forloop.index }}"></div>
	                                                    <div class="modal-inner">
	                                                        <div class="video-ratio">
	                                                            <span data-close="video_{{ forloop.index }}" class="close-modal">
	                                                                <span class="visually-hidden">Close</span>
	                                                                {% comment %}{% include 'icon-close' %}{% endcomment %}
	                                                            </span>

	                                                            {{video}}

	                                                        </div>
	                                                    </div>
	                                                </div>

	                                            {% endif %}

	                                            <script type="text/javascript">
	                                                $(document).ready(function() {
	                                                    // on Load
	                                                    setTimeout(function(){
	                                                        changeOnResize{{block.id}}();
	                                                    }, 500);

	                                                    // On Window Resize Event
	                                                    $(window).resize(function() {
	                                                        changeOnResize{{block.id}}();
	                                                    });
	                                                });
	                                                function changeOnResize{{block.id}}(){
	                                                    content{{block.id}} = '.{{blockClass}} .center-content';
	                                                    container{{block.id}} = '.{{blockClass}} .bg_image';
	                                                    plus{{block.id}} = 100;
	                                                    $contentHeight{{block.id}} = $(content{{block.id}}).outerHeight() + plus{{block.id}};
	                                                    $containerHeight{{block.id}} = $(container{{block.id}}).outerHeight();
	                                                    if ($contentHeight{{block.id}} >= $containerHeight{{block.id}}) {
	                                                        $(container{{block.id}}).css('min-height', $contentHeight{{block.id}});
	                                                    }
	                                                }
	                                            </script>



	                                            {% assign bgImg = b.image %}
	                                            {% assign bgImgMob = bgImg %}
	                                            {% if b.image_mob != blank %}
	                                                {% assign bgImgMob = b.image_mob %}
	                                            {% endif %}
	                                            <style type="text/css">
	                                                {{cssClass}} h2,
	                                                {{cssClass}} h4 {
	                                                    color: {{b.txt_color}};
	                                                }
	                                                {{cssClass}} .bg_image::after {
	                                                    background: {{b.bg_color}};
	                                                    opacity: {{ b.opacity | times: 0.01 }};
	                                                }
	                                                {{cssClass}} .bg_image {
	                                                    background-image: url({{bgImg | img_url: 'master' }});
	                                                    height: {{b.height}}px;
	                                                }
	                                                @media screen and (max-width:767px) {
	                                                {{cssClass}} .bg_image {
	                                                    background-image: url({{bgImgMob | img_url: 'grande' }});
	                                                }
	                                                }

	                                                {% assign custom = b.custom_html | raw %}
	                                                {% assign cssLoop = custom | replace: '==', cssClass | replace: ';', ' !important;' %}

	                                                {{cssLoop}}
	                                            </style>
	                                        {% else %}
	                                            {% assign mob_image = false %}
	                                            {% if b.image_mob != blank %}{% assign mob_image = true %}{% endif %}
	                                            <img class="{% if mob_image == true %}small--hide{% endif %}" src="{{b.image | img_url: 'master' }}" alt="{{ b.image.alt | default: 'Hero Image' }}">
	                                            {% if mob_image == true %}
	                                                <img class="medium-up--hide" src="{{b.image_mob | img_url: 'grande' }}" alt="{{ b.image_mob.alt | default: 'Hero Image' }}">
	                                            {% endif %}

	                                        {% endif %}
	                                    </div>

